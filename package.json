{
  "name": "opspilot-ai",
  "version": "1.0.0",
  "description": "AI-powered incident response agent that diagnoses and fixes AWS Lambda issues autonomously",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && cd frontend && npm run build",
    "build:backend": "tsc",
    "build:frontend": "cd frontend && npm run build",
    "dev": "concurrently \"tsc -w\" \"cd frontend && npm run dev\"",
    "dev:backend": "tsc -w",
    "dev:frontend": "cd frontend && npm run dev",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "deploy": "npm run build && cdk deploy"
  },
  "keywords": [
    "aws",
    "bedrock",
    "lambda",
    "cloudwatch",
    "incident-response",
    "agentic-ai",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.525.0",
    "@aws-sdk/client-cloudwatch": "^3.525.0",
    "@aws-sdk/client-cloudwatch-logs": "^3.525.0",
    "@aws-sdk/client-dynamodb": "^3.525.0",
    "@aws-sdk/client-lambda": "^3.525.0",
    "@aws-sdk/lib-dynamodb": "^3.525.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "aws-cdk-lib": "^2.120.0",
    "concurrently": "^8.2.2",
    "constructs": "^10.3.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
